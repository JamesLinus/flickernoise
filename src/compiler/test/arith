#!/bin/sh
. ./Common

###############################################################################

ptest "arithmetic: sx = a+b" <<EOF
sx = a+b
EOF
expect <<EOF
sx = (+ a b)
EOF

#------------------------------------------------------------------------------

ptest "arithmetic: sx = a-b" <<EOF
sx = a-b
EOF
expect <<EOF
sx = (- a b)
EOF

#------------------------------------------------------------------------------

ptest "arithmetic: sx = a*b" <<EOF
sx = a*b
EOF
expect <<EOF
sx = (* a b)
EOF

#------------------------------------------------------------------------------

ptest "arithmetic: sx = a/b" <<EOF
sx = a/b
EOF
expect <<EOF
sx = (/ a b)
EOF

#------------------------------------------------------------------------------

ptest "arithmetic: sx = a%b" <<EOF
sx = a/b
EOF
expect <<EOF
sx = (/ a b)
EOF

###############################################################################
