#!/bin/sh
. ./Common

###############################################################################

ptest "arithmetic: x = a+b" <<EOF
x = a+b
EOF
expect <<EOF
x = (+ a b)
EOF

#------------------------------------------------------------------------------

ptest "arithmetic: x = a-b" <<EOF
x = a-b
EOF
expect <<EOF
x = (- a b)
EOF

#------------------------------------------------------------------------------

ptest "arithmetic: x = a*b" <<EOF
x = a*b
EOF
expect <<EOF
x = (* a b)
EOF

#------------------------------------------------------------------------------

ptest "arithmetic: x = a/b" <<EOF
x = a/b
EOF
expect <<EOF
x = (/ a b)
EOF

#------------------------------------------------------------------------------

ptest "arithmetic: x = a%b" <<EOF
x = a/b
EOF
expect <<EOF
x = (/ a b)
EOF

###############################################################################
