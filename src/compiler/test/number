#!/bin/sh
. ./Common

###############################################################################

ptest "number: a = 1" <<EOF
a = 1
EOF
expect <<EOF
a = 1
EOF

#------------------------------------------------------------------------------

ptest "number: b = 1.2" <<EOF
b = 1.2
EOF
expect <<EOF
b = 1.2
EOF

#------------------------------------------------------------------------------

ptest "number: c = .3" <<EOF
c = .3
EOF
expect <<EOF
c = 0.3
EOF

#------------------------------------------------------------------------------

ptest "number: d = 4." <<EOF
d = 4.
EOF
expect <<EOF
d = 4
EOF

#------------------------------------------------------------------------------

ptest "number: e = 51.23" <<EOF
e = 51.23
EOF
expect <<EOF
e = 51.23
EOF

#------------------------------------------------------------------------------

ptest_fail "number: f = ." <<EOF
f = .
EOF
expect <<EOF
FPVM, line 1: scan error near '.'
EOF

###############################################################################
