#!/bin/sh
. ./Common

###############################################################################

ptest "number: sx = 1" <<EOF
sx = 1
EOF
expect <<EOF
sx = 1
EOF

#------------------------------------------------------------------------------

ptest "number: sx = 1.2" <<EOF
sx = 1.2
EOF
expect <<EOF
sx = 1.2
EOF

#------------------------------------------------------------------------------

ptest "number: sx = .3" <<EOF
sx = .3
EOF
expect <<EOF
sx = 0.3
EOF

#------------------------------------------------------------------------------

ptest "number: sx = 4." <<EOF
sx = 4.
EOF
expect <<EOF
sx = 4
EOF

#------------------------------------------------------------------------------

ptest "number: sx = 51.23" <<EOF
sx = 51.23
EOF
expect <<EOF
sx = 51.23
EOF

#------------------------------------------------------------------------------

ptest_fail "number: sx = ." <<EOF
sx = .
EOF
expect <<EOF
line 1: scan error near '.'
EOF

###############################################################################
